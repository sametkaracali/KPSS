{
  "name": "sinav-tr",
  "version": "1.0.0",
  "description": "YKS ve KPSS için ulusal ölçekli sınav platformu",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/api",
    "packages/*"
  ],
  "scripts": {
    "start": "turbo run start",
    "build": "turbo build",
    "dev": "turbo dev --parallel",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo clean",
    "test": "turbo run test",
    "test:api": "npm run test --workspace=apps/api",
    "test:web": "npm run test --workspace=apps/web",
    "test:e2e": "npm run test:e2e --workspace=apps/api",
    "setup": "bash ./setup.sh",
    "db:migrate": "cd apps/api && npx prisma migrate dev",
    "db:studio": "cd apps/api && npx prisma studio",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "turbo": "^2.5.8",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "yks",
    "kpss",
    "sınav",
    "eğitim",
    "türkiye",
    "online",
    "öğrenme",
    "sınavhazırlık"
  ],
  "author": "Sınav TR <info@sinavtr.com>",
  "license": "MIT",
  "packageManager": "npm@10.2.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sinav-tr.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/sinav-tr/issues"
  },
  "homepage": "https://sinavtr.com",
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "dotenv": "^17.2.3"
  }
}
